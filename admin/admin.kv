<FlatButton@ButtonBehavior+Label>:
    text:'default'
<AdminWindow>
    id:main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgb:(1,1,1,1)
        Rectangle:
            size:self.size
            pos:self.pos    
    BoxLayout:
        id:top_nav
        
        size_hint_y:None
        height:30
        canvas.before:
            Color:
                rgb:(.06,.45,.45,1)
            Rectangle:
                size:self.size
                pos:self.pos
        

        FlatButton:
            id:file_trigger
            text:'File'
            on_release:file_dropdown.open(self)
            size_hint:(.1,None)
            height:30
            #if we click on the box area so the dropdown dismiss
            Widget:
                on_parent:file_dropdown.dismiss()

                DropDown:
                    id:file_dropdown
                    Button:
                        id:close
                        text:'Quit'
                        size_hint_y:None
                        height:30
                            
        Label:
            text:'Admin Dashboard'
            bold:True
            size_hint:(.9,None)
            height:30

    BoxLayout:
        id:content_nav

        BoxLayout:
            id:nav_tabs
            size_hint_x:.2
            spacing:.3
            orientation: 'vertical'
            canvas.before:
                Color:
                    rgb:(.06,.40,.40,1)
                Rectangle:
                    size:self.size
                    pos:self.pos
            ToggleButton:
                id:user_toggle
                size_hint_y:.1
                text:'Manage User'
                state:'down'
                background_color:(.06,.47,.47,1)
                background_normal:''
              
            ToggleButton:
                id:products_toggle
                size_hint_y:.1
                text:'Manage Products'
                background_color:(.06,.47,.47,1)
                background_normal:''

            ToggleButton:
                id:analysis_toggle
                size_hint_y:.1
                text:'Product Analysis'
                background_color:(.06,.47,.47,1)
                background_normal:''

            Label:
                id:sp
                text:''
                size_hint_y:.7

        BoxLayout:
            id:content
            size_hint_x:.8
