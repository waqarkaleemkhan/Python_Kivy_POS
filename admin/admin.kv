<AdminWindow>
    id:main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgb:(1,1,1,1)
        Rectangle:
            size:self.size
            pos:self.pos    
    BoxLayout:
        id:top_nav
        
        size_hint_y:None
        height:30
        canvas.before:
            Color:
                rgb:(.06,.45,.45,1)
            Rectangle:
                size:self.size
                pos:self.pos
        

        Button:
            id:file_trigger
            text:'File'
            on_release:file_dropdown.open(self)
            size_hint:(.1,None)
            height:30
            #if we click on the box area so the dropdown dismiss
            Widget:
                on_parent:file_dropdown.dismiss()

                DropDown:
                    id:file_dropdown
                    Button:
                        id:close
                        text:'Quit'
                        size_hint_y:None
                        height:30
                            
        Label:
            text:'Admin Dashboard'
            bold:True
            size_hint:(.9,None)
            height:30